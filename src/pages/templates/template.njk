{% import "../../components/config.njk" as config %}
{% from "../../components/layout/head/head.njk" import Head %}

{% macro Icon(name, width=undefined, height=width) %}
    <svg class="icon-{{ name }}" width="{{ width }}" height="{{ height }}">
        <use xlink:href="{% if symbolsInject %} #{{ name }} {% else %} {{ prefixPath }}assets/img/svg-symbols.svg#{{ name }} {% endif %}"></use>
    </svg>
{% endmacro %}

<!DOCTYPE html>
<html lang="{{ config.lang }}">
    {{ Head(head.default) }}
    <body>
        %symbols%
        <div class="page-wrapper">
            {% block header %}{% endblock %}

            <main class="page-content">
                {% block content %}{% endblock %}
            </main>

            {% block footer %}{% endblock %}
        </div>
        <script src="__static__assets/js/vendor.js"></script>
        <script src="__static__assets/js/main.js"></script>
    </body>
</html>