{% macro Head(data) %}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="MobileOptimized" content="320">
    <meta name="HandheldFriendly" content="True">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>{{ data.title }}</title>
    <meta name="description" content="{{ data.description }}">
    <meta name="msapplication-tap-highlight" content="no">
    <meta name="msapplication-TileImage" content="__static__assets/img/content/favicons/ms-touch-icon-144x144-precomposed.png">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="application-name" content="{{ data.description }}">
    <link rel="icon" sizes="192x192" href="__static__assets/img/content/favicons/chrome-touch-icon-192x192.png">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="{{ data.title }}">
    <link rel="apple-touch-icon" href="__static__assets/img/content/favicons/apple-touch-icon.png">
    <link href="__static__assets/css/vendor.css" rel="stylesheet">
    <link href="__static__assets/css/main.css" rel="stylesheet">
</head>
{% endmacro %}

